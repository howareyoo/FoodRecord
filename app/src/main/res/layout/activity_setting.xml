<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2EFFF"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:background="@drawable/round_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBackSetting"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:background="@drawable/setting_back"
                android:gravity="center_vertical"
                android:paddingLeft="17dp"
                android:textColor="#0FB5D8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="SETTING"
                android:textColor="#0FB5D8"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTheme"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:background="@drawable/setting_thema" />

            <Button
                android:id="@+id/btnTextStyle"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:layout_marginBottom="44dp"
                android:background="@drawable/setting_text_style" />

            <Button
                android:id="@+id/btnPassword"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:layout_marginBottom="44dp"
                android:background="@drawable/setting_password" />

            <Button
                android:id="@+id/btnBackup"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:background="@drawable/setting_backup" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="360dp"
                android:layout_height="44dp"
                android:background="@drawable/setting_date_delete" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>